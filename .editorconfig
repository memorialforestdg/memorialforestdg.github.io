# http://editorconfig.org
# Base editor settings used by Prettier, see also .vscode/settings.json
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 80
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
insert_final_newline = false
trim_trailing_whitespace = false

[*.{js,ts}]
quote_type = single

[*.yml]
indent_style = space
