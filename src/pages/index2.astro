---
import BaseLayout from '../layouts/BaseLayout.astro'
import Hero from '../components/Hero.astro'
import Card from '~components/Card.astro'

import visitImage from '../images/RememberingTogether_Celebration_Moffat_72dpi-138.jpg'
import aboutImage from '../images/MarkerProduction/makeing-the-markers-003.jpg'
import platningImage from '../images/planting-dumfries.jpg'
import storiesImage from '../images/postcards.webp'

const pageTitle = 'A Community Covid Memorial'
const bannerAlt =
  'Shallow of focus image of Remembering Together D&G event, with memory ribbons fluttering in the wind and event visitors gatehring arround a table in the background.'
import bannerImage from '../images/RememberingTogetherDG_imageGregorAnderson_croppedHorizontal.jpg'
const heroTitle =
  '<h2 class="mt-0">The Dispersed Memorial Forest</h2><h3>A Community Covid Memorial for <span class="nowrap-ns">Dumfries & Galloway</span></h3>'
const heroText = `<p>Welcome to home and the online archive for the Dispersed Memorial Forest of Dumfies and Galloway.</p>
<p>The Dispersed Memorial Forest can be found in Dumfries, Castle Douglas, Moffat, Sanquhar, and Stranraer:</p>`
---

<BaseLayout
  pageTitle={pageTitle}
  bannerImage={bannerImage}
  bannerAlt={bannerAlt}
>
  <main id="main">
    <div class="container full-width">
      <Hero
        wrapperClasses={['poly-1', 'mt-3', 'mb-4', 'pa-0', 'pl-1', 'pr-1']}
        innerClasses={[
          'bg-brand-purple-dk',
          'brand-lt',
          'ma-3',
          'pt-4',
          'pb-5'
        ]}
        title={heroTitle}
        text={heroText}
        titleClasses={['f3', 'ma-0']}
        linkText="Visit the Memorial"
        linkHref="../visit/"
        linkClasses={[
          'btn',
          'bg-forest-50',
          'hover-bg-forest-900',
          'dib',
          'mt-3'
        ]}
      />
    </div>
    <div class="container full-width">
      <div class="cards__wrap">
        <ul class="flex flex-wrap justify-center list pa-0">
          <li>
            <a href="../visit/">
              <Card
                title="Visit"
                imgUrl={visitImage}
                alt=""
                headerHeight="240px"
                imagePosition="center 90%"
                alt="Katie Anderson, and ts Beall"
                wrapClasses="link mw-5 grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                headerClasses="flex-column flex justify-end bg-brand-teal-dk relative br-2"
                headingWrapClasses="absolute w-100 pl-1 pl-2-ns pl-3-l header-img-gradent"
                headingClasses="f3 brand-yellow-lt ma-2"
              />
            </a>
          </li>
          <li>
            <a href="../about/">
              <Card
                title="About"
                imgUrl={aboutImage}
                alt=""
                headerHeight="240px"
                imagePosition="center 20"
                alt="Katie Anderson, and ts Beall"
                wrapClasses="link mw-5 grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                headingWrapClasses="absolute w-100 pl-1 pl-2-ns pl-3-l header-img-gradent"
                headingClasses="f3 brand-yellow-lt ma-2"
              />
            </a>
          </li>
          <li>
            <a href="../about/planting-the-forest/">
              <Card
                title="Planting"
                imgUrl={platningImage}
                alt=""
                headerHeight="240px"
                imagePosition="center 20"
                alt=""
                wrapClasses="link mw-5 grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                headingWrapClasses="absolute w-100 pl-1 pl-2-ns pl-3-l header-img-gradent"
                headingClasses="f3 brand-yellow-lt ma-2"
              />
            </a>
          </li>
          <!-- <li>
            <a href="../stories/">
              <Card
                title="Stories"
                imgUrl={storiesImage}
                alt=""
                headerHeight="240px"
                imagePosition="center 17%"
                alt="Katie Anderson, and ts Beall"
                wrapClasses="link mw-5 grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                headingWrapClasses="absolute w-100 pl-1 pl-2-ns pl-3-l header-img-gradent"
                headingClasses="f3 brand-yellow-lt ma-2"
              />
            </a>
        </li>-->
        </ul>
      </div>
    </div>
  </main>
</BaseLayout>
<style is:global>
  .cards__wrap li {
    width: 300px;
  }
</style>
