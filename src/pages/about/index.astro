---
import BaseLayout from '~layouts/BaseLayout.astro'
import Breadcrumbs from '~components/Breadcrumbs.astro'
import Card from '~components/Card.astro'
import Flourish from '~components/Flourish.astro'

import bannerImage from '../../images/RememberingTogetherDG_imageGregorAnderson_croppedHorizontal.jpg'
import theStoryImage from '../../images/RememberingTogetherDG_imageGregorAnderson_croppedHorizontal.jpg'
import phase1image from '../../images/RememberingTogetherWBF22LowRes57__ImageColinTennant.jpg'
import phase2image from '../../images/planting-dumfriees-2.jpg'
import plantingImage from '../../images/planting-dumfries.jpg'
import artistsImage from '../../images/RememberingTogetherWBF22LowRes51_ImageColinTennant-horiz.jpg'
import partnersImage from '../../images/RT_Dumfries_Celebration_72dpi-126.jpg'
const bannerAlt =
  'Ribbon image of Remembering Together D&G event, with memory ribbons fluttering in the wind and event visitors gating arround a table in the background.'
const flourishClasses = ['--greywillow', 'dropcap', '--dc-cerise-800']
---

<BaseLayout pageTitle="About" bannerImage={bannerImage} bannerAlt={bannerAlt}>
  <main id="main">
    <div class="container stack">
      <div class="stack pl-5-ns pr-5-ns pt-4-ns">
        <Breadcrumbs />
        <Flourish classes={flourishClasses}>
          <p>
            <b>The following pages</b> tell the story of <b
              >The Dispersed Memorial Forest</b
            >, its genesis, and the communities and partners who made it
            possible.
          </p>
        </Flourish>
        <div class="cards__wrap">
          <ul class="flex flex-wrap justify-center list pa-0">
            <li class="grow card_wrap">
              <a href="./the-story">
                <Card
                  title="The Story"
                  imgUrl={theStoryImage}
                  alt=""
                  headerHeight="150px"
                  imagePosition="center 17%"
                  alt="Katie Anderson, and ts Beall"
                  wrapClasses="relative grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1 link  "
                  headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                  headingWrapClasses="absolute w-100 pl-3 header-img-gradent"
                  headingClasses="f3 brand-yellow-lt ma-2"
                />
              </a>
            </li>
            <li class="grow card_wrap">
              <a href="./phase-1">
                <Card
                  title="Phase 1"
                  imgUrl={phase1image}
                  alt=""
                  headerHeight="150px"
                  imagePosition="center 17%"
                  wrapClasses="grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                  headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                  headingWrapClasses="absolute w-100 pl-3 header-img-gradent"
                  headingClasses="f3 brand-yellow-lt ma-2"
                />
              </a>
            </li>
            <li class="grow card_wrap">
              <a href="./phase-2">
                <Card
                  title="Phase 2"
                  imgUrl={phase2image}
                  alt=""
                  headerHeight="150px"
                  imagePosition="center 17%"
                  wrapClasses="grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                  headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                  headingWrapClasses="absolute w-100 pl-3 header-img-gradent"
                  headingClasses="f3 brand-yellow-lt ma-2"
                />
              </a>
            </li>
            <li class="grow card_wrap">
              <a href="./planting-the-forest">
                <Card
                  title="Planting the Forest"
                  imgUrl={plantingImage}
                  alt=""
                  headerHeight="150px"
                  imagePosition="center 17%"
                  wrapClasses="grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                  headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                  headingWrapClasses="absolute w-100 pl-3 header-img-gradent"
                  headingClasses="f3 brand-yellow-lt ma-2"
                />
              </a>
            </li>
            <li class="grow card_wrap">
              <a href="./partners-funders">
                <Card
                  title="Partners & Funders"
                  imgUrl={partnersImage}
                  alt=""
                  headerHeight="150px"
                  imagePosition="center 17%"
                  wrapClasses="grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                  headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                  headingWrapClasses="absolute w-100 pl-3 header-img-gradent"
                  headingClasses="f3 brand-yellow-lt ma-2"
                />
              </a>
            </li>
            <li class="grow card_wrap">
              <a href="./the-artists">
                <Card
                  title="The Artists"
                  imgUrl={artistsImage}
                  alt=""
                  headerHeight="150px"
                  imagePosition="center 1%"
                  wrapClasses="grid ma-2 bg-surface-1 br2 overflow-hidden shadow-1"
                  headerClasses="relative flex-column flex justify-end bg-brand-teal-dk relative br-2"
                  headingWrapClasses="absolute w-100 pl-3 header-img-gradent"
                  headingClasses="f3 brand-yellow-lt ma-2"
                />
              </a>
            </li>
          </ul>
        </div>
        <hr />
        <p>
          <b>Visiting:</b>
          <a href="../visit/" class="link"
            >Follow this link to learn how you can visit the Dispersed Memorial
            Forest.</a
          >
        </p>
      </div>
    </div>
  </main>
</BaseLayout>
<style is:global>
  .card__wrap:focus-within {
    outline: 1px solid #000;
  }

  @media (max-width: 800px) {
    .card {
      width: 250px;
      max-width: 100%;
    }

    .card__head picture,
    .card__head picture > * {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  @media (max-width: 300px) {
    .card {
      width: 100%;
    }
  }
</style>
