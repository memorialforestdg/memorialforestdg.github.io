---
interface Props {
  title: string
  body: string
  href: string
}

const {href, title, body} = Astro.props
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    display: flex;
    padding: 1px;
    list-style: none;
    background-color: hls(var(--brand-yellow) 100%);
    background-image: var(--noise-4);
    background-position: 100%;
    background-size: 400%;
    border-radius: 7px;
    box-shadow: inset 0 0 0 1px rgb(255 255 255 / 10%);
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card > a {
    width: 100%;
    padding: calc(1.5rem - 1px);
    color: white;
    line-height: 1.4;
    text-decoration: none;
    background-color: #23262d;
    border-radius: 8px;
    opacity: 0.8;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .link-card:is(:hover, :focus-within) {
    background-image: var(--gradient-10);
    background-position: 0;
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: hls(var(--brand-yellow), 90%);
  }
</style>
